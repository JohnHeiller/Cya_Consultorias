        let offset = 80;
        let scrollTime = 500;
        $('a[href^="#"]').click(function () {
            $("html, body").animate({
                scrollTop: $($(this).attr("href")).offset().top - offset
            }, scrollTime);
            return false;
        });

        function goBlogView(pagina, autor, categoria) {
